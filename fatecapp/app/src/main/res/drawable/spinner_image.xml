<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- "shadow" -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/small_radius"
                android:topRightRadius="@dimen/big_radius"
                android:bottomLeftRadius="@dimen/small_radius"
                android:bottomRightRadius="@dimen/small_radius" />
            <solid android:color="#FFF" />
            <stroke
                android:width="@dimen/tiny_stroke_width"
                android:color="#111" />
            <padding
                android:bottom="@dimen/small_padding"
                android:left="@dimen/small_padding"
                android:right="@dimen/small_padding"
                android:top="@dimen/small_padding" />
        </shape>
    </item>


    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"></bitmap>
    </item>

</layer-list>